{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./out-tsc/",
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"importHelpers": true,
		"types": [
			"ckeditor__ckeditor5-core",
			"ckeditor__ckeditor5-engine",
			"ckeditor__ckeditor5-ui",
			"ckeditor__ckeditor5-utils"
		],
		"lib": [
			"dom",
			"es2015"
		],
		"typeRoots": [
			"../DefinitelyTyped/types"
		]
	},
	"exclude": [
		"src/test.ts",
		"**/*.spec.ts"
	]
}
